<% title @repo.name, :headline => 'Commits' %>
<%= partial :header, :locals => {:repo => @repo} %>

<div class="row-fluid">
  <div class="span12">
    <div class="row-fluid">
      <div class="span8">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>Author</th>
              <th>Commit message</th>
              <th>Date</th>
            </tr>
          </thead>
          <tbody>
            <% @commits.each do |commit| %>
              <% url = prefix_url("#{@repo.param}/commit/#{commit.id}") %>
              <tr class="js-nav" data-href="<%= url %>">
                <td><img src="<%= gravatar_url(commit.author.email) %>" class="img-rounded"> <%= commit.author.name %></td>
                <td><a href="<%= url %>"><%= truncate(h(commit.short_message), {:length => 140, :separator => ' '}) %></a></td>
                <td><%= time_tag(commit.committed_date) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <ul class="pager">
          <% if @previous_commits %>
            <li class="previous">
              <a href='<%= prefix_url(params[:repo]) %>/<%= params[:ref] %>/page/<%= params[:page] - 1 %>'>&larr; Previous</a>
            </li>
          <% end %>

          <% if @next_commits %>
            <li class="next">
              <a href='<%= prefix_url(params[:repo]) %>/<%= params[:ref] %>/page/<%= params[:page] + 1 %>'>Next &rarr;</a>
            </li>
          <% end %>
        </ul>
      </div>

      <div class="span4">
        <ul class="nav nav-list">
          <li class="nav-header">Heads</li>
          <% @repo.heads.each do |head| %>
            <li>
              <a href="<%=h prefix_url(@repo.param) %>/<%=h head.name %>">
                <%=h head.name %>
              </a>
            </li>
          <% end %>

          <li class="divider"></li>

          <li class="nav-header">Tags</li>
          <% if @repo.tags.any? %>
            <% @repo.tags.each do |tag| %>
              <li>
                <a href="<%=h prefix_url(@repo.param) %>/commit/<%=h tag.name %>">
                  <%=h tag.name %>
                </a>
              </li>
            <% end %>
          <% else %>
            <li>No tags</li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
