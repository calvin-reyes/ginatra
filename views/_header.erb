<nav class="navbar navbar-default hidden-header">
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" href="<%= prefix_url %>">
        <%= repo.name %>
      </a>
      <p class="navbar-text"><%= repo.description.split("\n").first %></p>
    </div>

    <ul class="nav navbar-nav navbar-right">
      <p class="navbar-text"><%= stats.commits_count %> commits</p>
      <p class="navbar-text"><%= stats.contributors.size %> contributors</p>
      <p class="navbar-text"><%= stats.license %> license</p>
    </ul>
  </div>
</nav>

<header class="repo-header">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <h1>
          <%= empty_description_hint_for(repo) %>
          <a href="<%= prefix_url(repo.param) %>"><%= repo.name %></a>
        </h1>
        <p class="lead"><%= repo.description.split("\n").first %></p>

        <% if Ginatra.config.git_clone_enabled? %>
          <div id="js-clone-url" class="muted clone-hint">
            <code>git clone <strong><%= url repo.param %></strong></code>
          </div>
        <% end %>
      </div>
      <div class="col-md-4">
        <ul class="list-inline stats">
          <li>
            <span class="number">
              <%= stats.commits_count %>
            </span>
            <span>commits</span>
          </li>
          <li>
            <span class="number">
              <%= stats.contributors.size %>
            </span>
            <span>contributors</span>
          </li>
          <li>
            <span class="number">
              <%= stats.license %>
            </span>
            <span>license</span>
          </li>
        </ul>
        <p class="stats-created-at">Created at: <%= time_tag stats.created_at %></p>
      </div>
    </div>
  </div>
</header>
